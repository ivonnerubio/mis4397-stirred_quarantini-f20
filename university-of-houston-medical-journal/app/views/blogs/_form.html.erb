
    <div class="card bg-light text-black text-center" style="width: 102rem; height:50rem;">
      <div class="text-center mb-4">
        <br></br><br></br><img class="mb-4" src="https://www.flaticon.com/svg/static/icons/svg/684/684279.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">New Blog Post</h1>
        <p>Connect. Discover. Share.<a href="https://caniuse.com/#feat=css-placeholder-shown"></a></p>
      </div>
      
      <%= form_for(blog) do |f| %>
        <% if blog.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>
      
            <ul>
            <% blog.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="field">
          <%= f.label :post_title %>
          <%= f.text_field :post_title %>
        </div>
      
        <div class="field">
          <%= f.label :text %>
          <%= f.text_field :text %>
        </div>
        
        <div class="field">
          <%= f.label :author_name %>
          <%= f.text_field :author_name %>
        </div>
      
        <div class="field">
          <%= f.label :authorID %>
          <%= f.text_field :authorID %>
        </div>
        
        <!--<div class="field">-->
        <!--  <%#= f.label :year %>-->
        <!--  <%#= f.number_field :year %>-->
        <!--</div>-->
      
        <div class="field">
          <%= f.label :post_type %>
          <%= f.text_field :post_type %>
        </div>
      
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
      
      <p id="notice"><%= notice %></p>
  </div>