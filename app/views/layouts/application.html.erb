              </li>
            <% else %>
              <li class="nav-item" style="font-size: 20px;padding-left:400px;padding-top:20px;">
                <%= link_to(' Sign In', new_user_session_path) %>  
              </li>
            <% end %>
            
            <% if user_signed_in? %>
              <li>
                <%= link_to('Edit registration', edit_user_registration_path) %>
              </li>
            <% else %>
              <li style="font-size: 20px; padding-left:15px;padding-top:20px;">
                <%= link_to('Register', new_user_registration_path) %>
              </li>
          <% end %>
